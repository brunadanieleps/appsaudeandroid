<Adicionar_Consultas>:
    FloatLayout:
        FloatLayout:
            pos_hint: {"right":1, "top":1}
            size_hint: 1, 0.2
            canvas:
                Color:
                    rgb: (1,1,1,1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Image:
                pos_hint: {"right":0.45, "top":0.8}
                size_hint: 0.5, 0.5
                source: "icones/medico.png"
            Label:
                pos_hint: {"right":0.8, "top":0.75}
                size_hint: 0.4, 0.4
                bold: True
                text: "Adicionar Consultas"
                font_size: 25
                color: 0, 0, 0, 1
        Label: 
            id:mensagem_erro_data
            pos_hint: {"right":0.9, "top":0.75}
            size_hint: 0.8, 0.1
            text: "[color=#000000]Mensagem Usuario[/color]"
            markup: True
        GridLayout:
            pos_hint: {"right":0.95, "top":0.6}
            size_hint: 0.9, 0.25
            cols: 2 
            rows: 4
            halign: 'right'

            Label:
                text: 'Data da consulta:'
                size_hint_x: None
                width: 100
                size: self.texture_size
            TextInput:       
                id: data
            Label:
                text: 'Horário:'
                size_hint_x: None
                width: 100
                size: self.texture_size
            TextInput:       
                id: horario
            Label:
                text: 'Especialidade:'
                size_hint_x: None
                width: 100
                size: self.texture_size
            TextInput:       
                id: especialidade
            Label:
                text: 'Nome do(a) Médico(a):'
                size_hint_x: None
                width: 100
                size: self.texture_size
            TextInput:       
                id: medico
        Button:
            pos_hint: {"right":0.95, "top":0.2}
            size_hint: 0.90, 0.05
            text: "Cadastrar"
            on_release: app.firebase.atualizar_consultas(data.text,horario.text,especialidade.text,medico.text)
        Button:
            pos_hint: {"right":0.95, "top":0.12}
            size_hint: 0.90, 0.05
            text: "Cancelar"
            on_release: app.mudar_tela("Consultas")
